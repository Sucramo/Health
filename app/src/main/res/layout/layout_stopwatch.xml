<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StopWatchActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="180dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:orientation="vertical"
                android:padding="16dp">


                <ImageView
                    android:layout_marginStart="4dp"
                    android:id="@+id/heart_rate_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_favorite_black_24dp" />

                <TextView
                    android:layout_marginStart="4dp"
                    android:id="@+id/heartrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textSize="45sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">


                <ImageView
                    android:id="@+id/clock_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_timer_black_24dp" />

                <Chronometer
                    android:id="@+id/chronometer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/heartrate"
                    android:layout_gravity="center"
                    android:textSize="45sp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:id="@+id/start_button_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:onClick="startChronometer"
                android:src="@drawable/ic_play_circle_filled_green_192dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="420dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_centerHorizontal="true">



            <ImageButton
                android:id="@+id/pause_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:onClick="pauseChronometer"
                android:src="@drawable/ic_pause_circle_filled_green_192dp"
                android:visibility="invisible"
                android:layout_weight="1"
                />

            <ImageButton
                android:id="@+id/save_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:onClick="resetChronometer"
                android:src="@drawable/ic_file_download_green_192dp"
                android:visibility="invisible"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/start_button_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:onClick="startChronometer"
                android:src="@drawable/ic_play_circle_filled_green_192dp"
                android:visibility="invisible"
                android:layout_weight="1"
                android:layout_marginStart="77dp"
                android:layout_marginTop="420dp"/>

        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>